def is_mathematically_beautiful(x, k):
    seen_powers = set()
    current_power = 1

    while x > 0:
        remainder = x % k
        
       
        if remainder > 1:
            return "NO"
        
        x //= k
        
    return "YES"

T = int(input())

for _ in range(T):
    x, k = map(int, input().split())
    print(is_mathematically_beautiful(x, k))

class Solution:
    def mergeArrays(self, nums1, nums2):
        merged_dict = {}

        # Process the first list
        for id1, val1 in nums1:
            merged_dict[id1] = merged_dict.get(id1, 0) + val1

        # Process the second list
        for id2, val2 in nums2:
            merged_dict[id2] = merged_dict.get(id2, 0) + val2

        # Convert dictionary to a sorted list of lists
        return sorted([[key, value] for key, value in merged_dict.items()])

